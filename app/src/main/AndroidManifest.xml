<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.dogus.otomat.icecdemo">

    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <!-- 添加访问手机位置的权限 -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <!-- 添加访问手机状态的权限 -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>

    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.RESTART_PACKAGES" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- 允许CWJ账户组访问底层信息 -->
    <uses-permission android:name="android.permission.CWJ_GROUP" >
    </uses-permission>

    <!-- 允许mTweak用户访问高级系统权限 -->
    <uses-permission android:name="android.permission.MTWEAK_USER" />

    <!-- 允许声波支付权限 -->
    <uses-permission android:name="android.permission.RECORD_AUDIO"/>
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />

    <uses-permission android:name="android.permission.GET_TASKS" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />

    <application
        android:name="controller.VendApplication"
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name=".MainAct"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:launchMode="singleTask"
            android:name="SerialPortSetting"
            android:configChanges="locale|keyboardHidden|orientation">
        </activity>
        <activity
            android:name=".MachineConfigActivity"
            android:label="Makine Konfigürasyonu"
            android:configChanges="locale|keyboardHidden|orientation">
        </activity>
        <activity
            android:name=".SalesScreenActivity"
            android:label="Satış Ekranı"
            android:configChanges="locale|keyboardHidden|orientation">
        </activity>
        <activity
            android:name=".AdminLoginActivity"
            android:label="Yönetici Girişi"
            android:configChanges="locale|keyboardHidden|orientation">
        </activity>
        <activity
            android:name=".AdminPanelActivity"
            android:label="Admin Panel"
            android:configChanges="locale|keyboardHidden|orientation">
        </activity>
        <activity
            android:name=".DolumPanelActivity"
            android:label="Dolum Panel"
            android:configChanges="locale|keyboardHidden|orientation">
        </activity>
        <activity
            android:name=".MachineSettingsActivity"
            android:label="Makine Ayarları"
            android:configChanges="locale|keyboardHidden|orientation">
        </activity>
        <activity
            android:name=".PasswordSettingsActivity"
            android:label="Şifre Ayarları"
            android:configChanges="locale|keyboardHidden|orientation">
        </activity>
        <activity
            android:name=".PriceSettingsActivity"
            android:label="Fiyat Ayarları"
            android:configChanges="locale|keyboardHidden|orientation">
        </activity>
        <activity
            android:name=".TelemetrySettingsActivity"
            android:label="Telemetri Ayarları"
            android:configChanges="locale|keyboardHidden|orientation">
        </activity>
        <activity
            android:name=".SerialPortSettingsActivity"
            android:label="Serial Port Ayarları"
            android:configChanges="locale|keyboardHidden|orientation">
        </activity>
        <activity
            android:name=".SauceToppingNamesActivity"
            android:label="Sos ve Süsleme İsimleri"
            android:configChanges="locale|keyboardHidden|orientation">
        </activity>

        <activity
            android:name=".RecipeManagementActivity"
            android:label="Tarif Yönetimi"
            android:configChanges="locale|keyboardHidden|orientation">
        </activity>

        <activity
            android:name=".MachineParametersActivity"
            android:label="Makine Parametreleri"
            android:configChanges="locale|keyboardHidden|orientation">
        </activity>
        <activity
            android:name=".SalesDataActivity"
            android:label="Satış Verileri"
            android:configChanges="locale|keyboardHidden|orientation">
        </activity>

        <activity
            android:name=".FileManagementActivity"
            android:label="DOGİ Dosya Yönetimi"
            android:configChanges="locale|keyboardHidden|orientation">
        </activity>

        <activity
            android:name=".LogSystemActivity"
            android:label="DOGİ Log Sistemi"
            android:configChanges="locale|keyboardHidden|orientation">
        </activity>
        <receiver android:name="controller.BootBroadcastReceiver"
            android:exported="true">
            <intent-filter android:priority="999">
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>
        <service android:name="controller.VendService"></service>
    </application>

</manifest>