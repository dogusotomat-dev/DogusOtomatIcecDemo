<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.dogus.otomat.icecdemo">

    <!-- Storage permissions -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <!-- Camera permission for product image capture -->
    <uses-permission android:name="android.permission.CAMERA" />
    
    <!-- TCN SDK permissions -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar"
        android:requestLegacyExternalStorage="true"
        android:usesCleartextTraffic="true">
        
        <activity android:name=".MainAct"
            android:exported="true"
            android:screenOrientation="portrait"
            android:configChanges="locale|keyboardHidden|orientation|screenSize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        
        <activity
            android:name=".AdminLoginActivity"
            android:label="Yönetici Girişi"
            android:configChanges="locale|keyboardHidden|orientation">
        </activity>
        
        <activity
            android:name=".AdminPanelActivity"
            android:label="Admin Panel"
            android:configChanges="locale|keyboardHidden|orientation">
        </activity>
        
        <activity
            android:name=".SalesScreenActivity"
            android:label="Satış Ekranı"
            android:configChanges="locale|keyboardHidden|orientation">
        </activity>
        
        <activity
            android:name=".MachineSettingsActivity"
            android:label="Makine Ayarları"
            android:configChanges="locale|keyboardHidden|orientation">
        </activity>
        
        <activity
            android:name=".ProductSettingsActivity"
            android:label="Ürün Ayarları"
            android:configChanges="locale|keyboardHidden|orientation">
        </activity>
        
        <activity
            android:name=".PriceSettingsActivity"
            android:label="Fiyat Ayarları"
            android:configChanges="locale|keyboardHidden|orientation">
        </activity>
        
        <activity
            android:name=".PaymentSettingsActivity"
            android:label="Ödeme Ayarları"
            android:configChanges="locale|keyboardHidden|orientation">
        </activity>
        
        <activity
            android:name=".AdvertisementSettingsActivity"
            android:label="Reklam Ayarları"
            android:configChanges="locale|keyboardHidden|orientation">
        </activity>
        
        <activity
            android:name=".SystemSettingsActivity"
            android:label="Sistem Ayarları"
            android:configChanges="locale|keyboardHidden|orientation">
        </activity>
        
        <activity
            android:name=".FileManagementActivity"
            android:label="Dosya Yönetimi"
            android:configChanges="locale|keyboardHidden|orientation">
        </activity>
        
        <activity
            android:name=".LogSystemActivity"
            android:label="Log Sistemi"
            android:configChanges="locale|keyboardHidden|orientation">
        </activity>

        <!-- Periyodik Log Servisi -->
        <service
            android:name=".PeriodicLoggingService"
            android:enabled="true"
            android:exported="false" />
            
        <!-- TCN Service -->
        <service
            android:name="com.tcn.icecboard.TcnService"
            android:enabled="true"
            android:exported="false" />

    </application>

</manifest>