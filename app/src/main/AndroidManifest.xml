<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.dogus.otomat.icecdemo">

    <!-- Storage permissions -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <!-- Camera permission for product image capture -->
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:name="controller.VendApplication"
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar"
        android:requestLegacyExternalStorage="true"
        android:usesCleartextTraffic="true">
        
        <activity android:name=".MainAct"
            android:exported="true"
            android:screenOrientation="portrait"
            android:configChanges="locale|keyboardHidden|orientation|screenSize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        
        <activity
            android:name=".AdminLoginActivity"
            android:label="Yönetici Girişi"
            android:configChanges="locale|keyboardHidden|orientation">
        </activity>
        
        <activity
            android:name=".AdminPanelActivity"
            android:label="Admin Panel"
            android:configChanges="locale|keyboardHidden|orientation">
        </activity>
        
        <activity
            android:name=".MachineSettingsActivity"
            android:label="Makine Ayarları"
            android:configChanges="locale|keyboardHidden|orientation">
        </activity>
        
        <activity
            android:name=".PasswordSettingsActivity"
            android:label="Şifre Ayarları"
            android:configChanges="locale|keyboardHidden|orientation">
        </activity>
        
        <activity
            android:name=".ProductSettingsActivity"
            android:label="Ürün Ayarları"
            android:configChanges="locale|keyboardHidden|orientation">
        </activity>

        <activity
            android:name=".SystemSettingsActivity"
            android:label="Sistem Ayarları"
            android:configChanges="locale|keyboardHidden|orientation">
        </activity>

    </application>

</manifest>