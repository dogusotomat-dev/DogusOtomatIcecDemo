<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/white">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Reklam Ayarları"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:gravity="center"
        android:layout_marginBottom="20dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Reklam Gösterimi Ayarları -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Reklam Gösterimi Ayarları"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_marginBottom="12dp"
                android:background="#E0E0E0"
                android:padding="8dp"/>

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Reklam Gösterimi Etkin"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Reklam Gösterim Süresi (saniye)"
                android:textSize="14sp"
                android:inputType="number"
                android:background="#f0f0f0"
                android:padding="12dp"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Reklam Geçişi Süresi (milisaniye)"
                android:textSize="14sp"
                android:inputType="number"
                android:background="#f0f0f0"
                android:padding="12dp"
                android:layout_marginBottom="8dp"/>

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rastgele Reklam Sırası"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:layout_marginBottom="8dp"/>

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Döngüsel Reklam Gösterimi"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:layout_marginBottom="16dp"/>

            <!-- Medya Türleri Ayarları -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Medya Türleri Ayarları"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_marginBottom="12dp"
                android:background="#E0E0E0"
                android:padding="8dp"/>

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fotoğraf Reklamları Etkin"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:layout_marginBottom="8dp"/>

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Video Reklamları Etkin"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:layout_marginBottom="8dp"/>

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Animasyonlu Reklamlar Etkin"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:layout_marginBottom="8dp"/>

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="HTML5 Reklamlar Etkin"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:layout_marginBottom="16dp"/>

            <!-- Reklam Kaynağı Ayarları -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Reklam Kaynağı Ayarları"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_marginBottom="12dp"
                android:background="#E0E0E0"
                android:padding="8dp"/>

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">

                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Yerel Depolama"
                    android:textSize="14sp"
                    android:textColor="@android:color/black"
                    android:layout_marginBottom="8dp"/>

                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="USB Bellek"
                    android:textSize="14sp"
                    android:textColor="@android:color/black"
                    android:layout_marginBottom="8dp"/>

                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ağ (HTTP/HTTPS)"
                    android:textSize="14sp"
                    android:textColor="@android:color/black"
                    android:layout_marginBottom="8dp"/>

                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cloud (Firebase)"
                    android:textSize="14sp"
                    android:textColor="@android:color/black"
                    android:layout_marginBottom="16dp"/>

            </RadioGroup>

            <!-- Reklam Zamanlama Ayarları -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Reklam Zamanlama Ayarları"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_marginBottom="12dp"
                android:background="#E0E0E0"
                android:padding="8dp"/>

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Zaman Tabanlı Reklam Gösterimi"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Sabah Reklam Başlangıç Saati"
                android:textSize="14sp"
                android:inputType="time"
                android:background="#f0f0f0"
                android:padding="12dp"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Akşam Reklam Bitiş Saati"
                android:textSize="14sp"
                android:inputType="time"
                android:background="#f0f0f0"
                android:padding="12dp"
                android:layout_marginBottom="8dp"/>

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hafta Sonu Özel Reklamlar"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:layout_marginBottom="8dp"/>

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bayram/Özel Gün Reklamları"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:layout_marginBottom="16dp"/>

            <!-- Reklam Filtreleme Ayarları -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Reklam Filtreleme Ayarları"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_marginBottom="12dp"
                android:background="#E0E0E0"
                android:padding="8dp"/>

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Yaş Grubu Filtrelemesi"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:layout_marginBottom="8dp"/>

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cinsiyet Filtrelemesi"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:layout_marginBottom="8dp"/>

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Zaman Dilimi Filtrelemesi"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:layout_marginBottom="8dp"/>

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Konum Bazlı Filtreleme"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:layout_marginBottom="16dp"/>

            <!-- Reklam Performans Ayarları -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Reklam Performans Ayarları"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_marginBottom="12dp"
                android:background="#E0E0E0"
                android:padding="8dp"/>

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Performans Monitörleme Etkin"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Performans Veri Saklama Süresi (gün)"
                android:textSize="14sp"
                android:inputType="number"
                android:background="#f0f0f0"
                android:padding="12dp"
                android:layout_marginBottom="8dp"/>

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Reklam Etkileşim İzleme"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:layout_marginBottom="8dp"/>

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tıklanma Oranı Analizi"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:layout_marginBottom="8dp"/>

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gösterim Sayısı İzleme"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:layout_marginBottom="16dp"/>

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_back"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="Geri"
            android:textSize="16sp"
            android:background="#FF5722"
            android:textColor="@android:color/white"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/btn_save"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="Kaydet"
            android:textSize="16sp"
            android:background="#4CAF50"
            android:textColor="@android:color/white"
            android:layout_marginStart="8dp"/>

    </LinearLayout>

</LinearLayout>