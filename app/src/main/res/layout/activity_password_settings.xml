<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/dogus_background_light"
    android:padding="16dp">

    <!-- Header -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="🔐 Şifre Ayarları"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/dogus_primary"
        android:gravity="center"
        android:layout_marginBottom="32dp"/>

    <!-- Şifre Ayarları -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="@color/dogus_background_card">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Şifre Değiştir"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/dogus_primary"
                android:layout_marginBottom="20dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="👑 Yetkili (Admin) Kullanıcısı"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/dogus_secondary"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:id="@+id/etAdminPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Yetkili Şifresi (Varsayılan: Dogusotomat.12)"
                android:inputType="textPassword"
                android:background="@drawable/dogus_input_field"
                android:padding="16dp"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="🔧 Dolum Kullanıcısı"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/dogus_secondary"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:id="@+id/etDolumPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Dolum Şifresi (Varsayılan: Dogusotomat.12)"
                android:inputType="textPassword"
                android:background="@drawable/dogus_input_field"
                android:padding="16dp"
                android:layout_marginBottom="24dp"/>

            <Button
                android:id="@+id/btnSavePasswords"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="💾 Şifreleri Kaydet"
                android:textSize="16sp"
                android:background="@drawable/dogus_button_primary"
                android:textColor="@color/dogus_text_white"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Bilgi -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp"
        app:cardBackgroundColor="@color/dogus_info">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ℹ️ Bilgi"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/dogus_text_white"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Şifreler en az 6 karakter olmalıdır\n• Güvenli şifreler için büyük/küçük harf, rakam ve özel karakter kullanın\n• Şifreler güvenli şekilde saklanır"
                android:textSize="14sp"
                android:textColor="@color/dogus_text_white"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Geri Dön -->
    <Button
        android:id="@+id/btnBack"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="← Geri Dön"
        android:textSize="16sp"
        android:background="@drawable/dogus_button_back"
        android:textColor="@color/dogus_text_white"/>

</LinearLayout>
