<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dogus_background_light">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Admin Paneli"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/dogus_primary"
            android:gravity="center"
            android:layout_marginBottom="32dp"/>

        <!-- Şifre Ayarları -->
        <Button
            android:id="@+id/btnPasswordSettings"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="🔐 Şifre Ayarları"
            android:textSize="18sp"
            android:background="@drawable/dogus_button_primary"
            android:textColor="@color/dogus_text_white"
            android:layout_marginBottom="16dp"/>

        <!-- Ürün Ayarları -->
        <Button
            android:id="@+id/btnProductSettings"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="🍦 Ürün Ayarları"
            android:textSize="18sp"
            android:background="@drawable/dogus_button_success"
            android:textColor="@color/dogus_text_white"
            android:layout_marginBottom="16dp"/>

        <!-- Makine Ayarları -->
        <Button
            android:id="@+id/btnMachineSettings"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="⚙️ Makine Ayarları"
            android:textSize="18sp"
            android:background="@drawable/dogus_button_warning"
            android:textColor="@color/dogus_text_white"
            android:layout_marginBottom="16dp"/>

        <!-- Sistem Ayarları -->
        <Button
            android:id="@+id/btnSystemSettings"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="🔧 Sistem Ayarları"
            android:textSize="18sp"
            android:background="@drawable/dogus_button_info"
            android:textColor="@color/dogus_text_white"
            android:layout_marginBottom="16dp"/>

        <!-- Reklam Ayarları -->
        <Button
            android:id="@+id/btnAdvertisementSettings"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="🎬 Reklam Ayarları"
            android:textSize="18sp"
            android:background="@drawable/dogus_button_primary"
            android:textColor="@color/dogus_text_white"
            android:layout_marginBottom="16dp"/>

        <!-- Geri Dön -->
        <Button
            android:id="@+id/btnBackToSales"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="🔙 Ana Ekrana Dön"
            android:textSize="18sp"
            android:background="@drawable/dogus_button_secondary"
            android:textColor="@color/dogus_text_white"
            android:layout_marginBottom="16dp"/>

    </LinearLayout>
</ScrollView>
