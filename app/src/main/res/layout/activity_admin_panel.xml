<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dogus_background_light">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Admin Paneli"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/dogus_primary"
            android:gravity="center"
            android:layout_marginBottom="32dp"/>

        <!-- Şifre Ayarları -->
        <Button
            android:id="@+id/btnPasswordSettings"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="🔐 Şifre Ayarları"
            android:textSize="18sp"
            android:background="@drawable/dogus_button_primary"
            android:textColor="@color/dogus_text_white"
            android:layout_marginBottom="16dp"/>

        <!-- Fiyat Ayarları -->
        <Button
            android:id="@+id/btnPriceSettings"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="💰 Fiyat Ayarları"
            android:textSize="18sp"
            android:background="@drawable/dogus_button_success"
            android:textColor="@color/dogus_text_white"
            android:layout_marginBottom="16dp"/>

        <!-- Makine Ayarları -->
        <Button
            android:id="@+id/btnMachineSettings"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="⚙️ Makine Ayarları"
            android:textSize="18sp"
            android:background="@drawable/dogus_button_warning"
            android:textColor="@color/dogus_text_white"
            android:layout_marginBottom="16dp"/>

        <!-- Telemetri Ayarları -->
        <Button
            android:id="@+id/btnTelemetrySettings"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="📡 Telemetri Ayarları"
            android:textSize="18sp"
            android:background="@drawable/dogus_button_info"
            android:textColor="@color/dogus_text_white"
            android:layout_marginBottom="16dp"/>

        <!-- Serial Port Ayarları -->
        <Button
            android:id="@+id/btnSerialPortSettings"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="🔌 Serial Port Ayarları"
            android:textSize="18sp"
            android:background="@drawable/dogus_button_warning"
            android:textColor="@color/dogus_text_white"
            android:layout_marginBottom="16dp"/>

        <!-- Tarif Yönetimi -->
        <Button
            android:id="@+id/btnRecipeManagement"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="📋 Tarif Yönetimi"
            android:textSize="18sp"
            android:background="@drawable/dogus_button_info"
            android:textColor="@color/dogus_text_white"
            android:layout_marginBottom="16dp"/>

        <!-- Sos ve Süsleme İsimleri -->
        <Button
            android:id="@+id/btnSauceToppingNames"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="🍦 Sos ve Süsleme İsimleri"
            android:textSize="18sp"
            android:background="@drawable/dogus_button_primary"
            android:textColor="@color/dogus_text_white"
            android:layout_marginBottom="16dp"/>

        <!-- Satış Verileri -->
        <Button
            android:id="@+id/btnSalesData"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="📊 Satış Verileri"
            android:textSize="18sp"
            android:background="@drawable/dogus_button_info"
            android:textColor="@color/dogus_text_white"
            android:layout_marginBottom="16dp"/>

        <!-- Dosya Yönetimi -->
        <Button
            android:id="@+id/btnFileManagement"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="📁 Dosya Yönetimi"
            android:textSize="18sp"
            android:background="@drawable/dogus_button_primary_modern"
            android:textColor="@color/dogus_text_white"
            android:layout_marginBottom="16dp"/>

        <!-- Log Sistemi -->
        <Button
            android:id="@+id/btnLogSystem"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="📝 Log Sistemi"
            android:textSize="18sp"
            android:background="@drawable/dogus_button_success_modern"
            android:textColor="@color/dogus_text_white"
            android:layout_marginBottom="16dp"/>

        <!-- Reklam Ayarları -->
        <Button
            android:id="@+id/btnAdvertisementSettings"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="📺 Reklam Ayarları"
            android:textSize="18sp"
            android:background="@drawable/dogus_button_primary"
            android:textColor="@color/dogus_text_white"
            android:layout_marginBottom="16dp"/>

        <!-- Ürün Görsel Atama -->
        <Button
            android:id="@+id/btnProductImageAssignment"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="🖼️ Ürün Görsel Atama"
            android:textSize="18sp"
            android:background="@drawable/dogus_button_info"
            android:textColor="@color/dogus_text_white"
            android:layout_marginBottom="16dp"/>

        <!-- Gelişmiş Loglama -->
        <Button
            android:id="@+id/btnAdvancedLogging"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="🔍 Gelişmiş Loglama"
            android:textSize="18sp"
            android:background="@drawable/dogus_button_warning"
            android:textColor="@color/dogus_text_white"
            android:layout_marginBottom="32dp"/>

        <!-- Geri Dön -->
        <Button
            android:id="@+id/btnBackToSales"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="← Satış Ekranına Dön"
            android:textSize="16sp"
            android:background="@drawable/dogus_button_back"
            android:textColor="@color/dogus_text_white"/>

    </LinearLayout>
</ScrollView>
