<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/white">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ödeme Ayarları"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:gravity="center"
        android:layout_marginBottom="20dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- MDB Ayarları -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MDB Ayarları"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_marginBottom="12dp"
                android:background="#E0E0E0"
                android:padding="8dp"/>

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MDB Etkin"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="MDB Port Yolu (örn: /dev/ttyS2)"
                android:textSize="14sp"
                android:background="#f0f0f0"
                android:padding="12dp"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="MDB Baud Rate"
                android:textSize="14sp"
                android:inputType="number"
                android:background="#f0f0f0"
                android:padding="12dp"
                android:layout_marginBottom="8dp"/>

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MDB Level 3 Etkin"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:layout_marginBottom="16dp"/>

            <!-- Ödeme Yöntemleri -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ödeme Yöntemleri"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_marginBottom="12dp"
                android:background="#E0E0E0"
                android:padding="8dp"/>

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nakit Ödeme Etkin"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:layout_marginBottom="8dp"/>

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kart Ödeme Etkin"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:layout_marginBottom="8dp"/>

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mobil Ödeme Etkin"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:layout_marginBottom="8dp"/>

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kredi Kartı Etkin"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:layout_marginBottom="8dp"/>

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Debit Kart Etkin"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:layout_marginBottom="16dp"/>

            <!-- Kart Tipi Ayarları -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kart Tipi Ayarları"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_marginBottom="12dp"
                android:background="#E0E0E0"
                android:padding="8dp"/>

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Visa Kart Etkin"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:layout_marginBottom="8dp"/>

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MasterCard Etkin"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:layout_marginBottom="8dp"/>

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="American Express Etkin"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:layout_marginBottom="8dp"/>

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Diğer Kartlar Etkin"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:layout_marginBottom="16dp"/>

            <!-- Kontaktsız Ödeme Ayarları -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kontaktsız Ödeme Ayarları"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_marginBottom="12dp"
                android:background="#E0E0E0"
                android:padding="8dp"/>

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="NFC Ödeme Etkin"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:layout_marginBottom="8dp"/>

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Apple Pay Etkin"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:layout_marginBottom="8dp"/>

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Google Pay Etkin"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Kontaktsız Ödeme Limiti (TL)"
                android:textSize="14sp"
                android:inputType="numberDecimal"
                android:background="#f0f0f0"
                android:padding="12dp"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Kart Okuma Zaman Aşımı (saniye)"
                android:textSize="14sp"
                android:inputType="number"
                android:background="#f0f0f0"
                android:padding="12dp"
                android:layout_marginBottom="16dp"/>

            <!-- Para Üstü Ayarları -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Para Üstü Ayarları"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_marginBottom="12dp"
                android:background="#E0E0E0"
                android:padding="8dp"/>

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Para Üstü Ver Etkin"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Maksimum Para Üstü Limiti (TL)"
                android:textSize="14sp"
                android:inputType="numberDecimal"
                android:background="#f0f0f0"
                android:padding="12dp"
                android:layout_marginBottom="8dp"/>

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Para Üstü Uyarısı Etkin"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:layout_marginBottom="16dp"/>

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_back"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="Geri"
            android:textSize="16sp"
            android:background="#FF5722"
            android:textColor="@android:color/white"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/btn_save"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="Kaydet"
            android:textSize="16sp"
            android:background="#4CAF50"
            android:textColor="@android:color/white"
            android:layout_marginStart="8dp"/>

    </LinearLayout>

</LinearLayout>