<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/white">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dosya Yönetimi"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:gravity="center"
        android:layout_marginBottom="20dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Dosya Yükleme Bölümü -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dosya Yükleme"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_marginBottom="12dp"
                android:background="#E0E0E0"
                android:padding="8dp"/>

            <Button
                android:id="@+id/btn_upload_image"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Resim Yükle"
                android:textSize="16sp"
                android:background="#4CAF50"
                android:textColor="@android:color/white"
                android:layout_marginBottom="8dp"/>

            <Button
                android:id="@+id/btn_upload_video"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Video Yükle"
                android:textSize="16sp"
                android:background="#4CAF50"
                android:textColor="@android:color/white"
                android:layout_marginBottom="8dp"/>

            <Button
                android:id="@+id/btn_upload_audio"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Ses Dosyası Yükle"
                android:textSize="16sp"
                android:background="#4CAF50"
                android:textColor="@android:color/white"
                android:layout_marginBottom="16dp"/>

            <!-- Dosya Listeleme Bölümü -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dosya Listesi"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_marginBottom="12dp"
                android:background="#E0E0E0"
                android:padding="8dp"/>

            <ListView
                android:id="@+id/lv_file_list"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="#f0f0f0"
                android:padding="8dp"
                android:layout_marginBottom="16dp"/>

            <!-- Dosya İşlemleri Bölümü -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dosya İşlemleri"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_marginBottom="12dp"
                android:background="#E0E0E0"
                android:padding="8dp"/>

            <Button
                android:id="@+id/btn_delete_file"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Dosya Sil"
                android:textSize="16sp"
                android:background="#FF5722"
                android:textColor="@android:color/white"
                android:layout_marginBottom="8dp"/>

            <Button
                android:id="@+id/btn_rename_file"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Dosya Yeniden Adlandır"
                android:textSize="16sp"
                android:background="#FF9800"
                android:textColor="@android:color/white"
                android:layout_marginBottom="8dp"/>

            <Button
                android:id="@+id/btn_copy_file"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Dosya Kopyala"
                android:textSize="16sp"
                android:background="#2196F3"
                android:textColor="@android:color/white"
                android:layout_marginBottom="8dp"/>

            <Button
                android:id="@+id/btn_move_file"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Dosya Taşı"
                android:textSize="16sp"
                android:background="#9C27B0"
                android:textColor="@android:color/white"
                android:layout_marginBottom="16dp"/>

            <!-- Depolama Bilgileri Bölümü -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Depolama Bilgileri"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_marginBottom="12dp"
                android:background="#E0E0E0"
                android:padding="8dp"/>

            <TextView
                android:id="@+id/tv_storage_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Depolama bilgileri yükleniyor..."
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:background="#f0f0f0"
                android:padding="12dp"
                android:layout_marginBottom="8dp"/>

            <ProgressBar
                android:id="@+id/pb_storage_usage"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginBottom="8dp"
                style="?android:attr/progressBarStyleHorizontal"/>

            <TextView
                android:id="@+id/tv_storage_percentage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0%"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:gravity="center"
                android:layout_marginBottom="16dp"/>

            <!-- Dosya Kategorileri Bölümü -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dosya Kategorileri"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_marginBottom="12dp"
                android:background="#E0E0E0"
                android:padding="8dp"/>

            <Button
                android:id="@+id/btn_manage_images"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Resim Yönetimi"
                android:textSize="16sp"
                android:background="#009688"
                android:textColor="@android:color/white"
                android:layout_marginBottom="8dp"/>

            <Button
                android:id="@+id/btn_manage_videos"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Video Yönetimi"
                android:textSize="16sp"
                android:background="#009688"
                android:textColor="@android:color/white"
                android:layout_marginBottom="8dp"/>

            <Button
                android:id="@+id/btn_manage_audio"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Ses Dosyası Yönetimi"
                android:textSize="16sp"
                android:background="#009688"
                android:textColor="@android:color/white"
                android:layout_marginBottom="8dp"/>

            <Button
                android:id="@+id/btn_manage_documents"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Belge Yönetimi"
                android:textSize="16sp"
                android:background="#009688"
                android:textColor="@android:color/white"
                android:layout_marginBottom="16dp"/>

            <!-- Yedekleme ve Geri Yükleme Bölümü -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Yedekleme ve Geri Yükleme"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_marginBottom="12dp"
                android:background="#E0E0E0"
                android:padding="8dp"/>

            <Button
                android:id="@+id/btn_backup_files"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Dosyaları Yedekle"
                android:textSize="16sp"
                android:background="#795548"
                android:textColor="@android:color/white"
                android:layout_marginBottom="8dp"/>

            <Button
                android:id="@+id/btn_restore_files"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Dosyaları Geri Yükle"
                android:textSize="16sp"
                android:background="#795548"
                android:textColor="@android:color/white"
                android:layout_marginBottom="8dp"/>

            <Button
                android:id="@+id/btn_export_files"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Dosyaları Dışa Aktar"
                android:textSize="16sp"
                android:background="#607D8B"
                android:textColor="@android:color/white"
                android:layout_marginBottom="8dp"/>

            <Button
                android:id="@+id/btn_import_files"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Dosyaları İçe Aktar"
                android:textSize="16sp"
                android:background="#607D8B"
                android:textColor="@android:color/white"
                android:layout_marginBottom="16dp"/>

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_back"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="Geri"
            android:textSize="16sp"
            android:background="#FF5722"
            android:textColor="@android:color/white"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/btn_refresh"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="Yenile"
            android:textSize="16sp"
            android:background="#4CAF50"
            android:textColor="@android:color/white"
            android:layout_marginStart="8dp"/>

    </LinearLayout>

</LinearLayout>