<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/dogus_background_light"
    android:padding="20dp">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="30dp">

        <Button
            android:id="@+id/btn_back"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:text="←"
            android:textSize="24sp"
            android:background="@drawable/dogus_button_secondary_rounded"
            android:textColor="@color/dogus_text_white" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Dondurma Otomatı Kontrol Paneli"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/dogus_text_primary"
            android:gravity="center" />
    </LinearLayout>

    <!-- Ana Kontrol Butonları -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="30dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ana Kontroller"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/dogus_text_primary"
            android:layout_marginBottom="15dp" />

        <Button
            android:id="@+id/btn_serial_settings"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="Seri Port Ayarları"
            android:background="@drawable/dogus_button_primary_rounded"
            android:textColor="@color/dogus_text_white"
            android:textSize="16sp"
            android:layout_marginBottom="15dp" />

        <Button
            android:id="@+id/btn_machine_config"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="Makine Konfigürasyonu"
            android:background="@drawable/dogus_button_primary_rounded"
            android:textColor="@color/dogus_text_white"
            android:textSize="16sp"
            android:layout_marginBottom="15dp" />

        <Button
            android:id="@+id/btn_status_query"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="Durum Sorgulama"
            android:background="@drawable/dogus_button_primary_rounded"
            android:textColor="@color/dogus_text_white"
            android:textSize="16sp" />
    </LinearLayout>

    <!-- Dondurma Üretim Kontrolleri -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="30dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dondurma Üretim Kontrolleri"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/dogus_text_primary"
            android:layout_marginBottom="15dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="15dp">

            <EditText
                android:id="@+id/et_slot_number"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:hint="Slot No (1-8)"
                android:inputType="number"
                android:background="@drawable/dogus_edittext_background"
                android:padding="15dp"
                android:layout_marginEnd="10dp" />

            <Button
                android:id="@+id/btn_produce_ice_cream"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:text="Üret"
                android:background="@drawable/dogus_button_accent_rounded"
                android:textColor="@color/dogus_text_white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="15dp">

            <EditText
                android:id="@+id/et_test_slot"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:hint="Test Slot No"
                android:inputType="number"
                android:background="@drawable/dogus_edittext_background"
                android:padding="15dp"
                android:layout_marginEnd="10dp" />

            <Button
                android:id="@+id/btn_test_slot"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:text="Test Et"
                android:background="@drawable/dogus_button_secondary_rounded"
                android:textColor="@color/dogus_text_white" />
        </LinearLayout>
    </LinearLayout>

    <!-- Sıcaklık ve Durum Kontrolleri -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="30dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sıcaklık ve Durum"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/dogus_text_primary"
            android:layout_marginBottom="15dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="15dp">

            <Button
                android:id="@+id/btn_query_temp"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="Sıcaklık Sorgula"
                android:background="@drawable/dogus_button_primary_rounded"
                android:textColor="@color/dogus_text_white"
                android:layout_marginEnd="10dp" />

            <Button
                android:id="@+id/btn_query_status"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="Durum Sorgula"
                android:background="@drawable/dogus_button_primary_rounded"
                android:textColor="@color/dogus_text_white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_emergency_stop"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="ACİL DURDUR"
                android:background="@drawable/dogus_button_accent_rounded"
                android:textColor="@color/dogus_text_white"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginEnd="10dp" />

            <Button
                android:id="@+id/btn_reset_machine"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="Makineyi Sıfırla"
                android:background="@drawable/dogus_button_secondary_rounded"
                android:textColor="@color/dogus_text_white"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Satış Ekranı Butonu -->
    <Button
        android:id="@+id/btn_sales_screen"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="SATIŞ EKRANINA GİT"
        android:background="@drawable/dogus_button_accent_rounded"
        android:textColor="@color/dogus_text_white"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp" />

</LinearLayout>
