<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/white">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dogi Soft Ice Cream"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:gravity="center"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:id="@+id/tv_welcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hoşgeldiniz! Dondurmanızı seçin"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:gravity="center"
        android:layout_marginBottom="20dp"/>

    <!-- Dondurma Seçimi -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dondurma Türü"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_marginBottom="12dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp">

        <Button
            android:id="@+id/btn_vanilla"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:text="Vanilya\n8.00 TL"
            android:textSize="14sp"
            android:background="#FFF3E0"
            android:textColor="@android:color/black"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/btn_chocolate"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:text="Çikolata\n8.00 TL"
            android:textSize="14sp"
            android:background="#EFEBE9"
            android:textColor="@android:color/black"
            android:layout_marginStart="8dp"/>

    </LinearLayout>

    <!-- Sos Seçimi -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Soslar"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_marginBottom="12dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp">

        <Button
            android:id="@+id/btn_sauce1"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="Çikolata Sos\n+2.00 TL"
            android:textSize="12sp"
            android:background="#EFEBE9"
            android:textColor="@android:color/black"
            android:layout_marginEnd="4dp"/>

        <Button
            android:id="@+id/btn_sauce2"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="Karamel Sos\n+2.50 TL"
            android:textSize="12sp"
            android:background="#EFEBE9"
            android:textColor="@android:color/black"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"/>

        <Button
            android:id="@+id/btn_sauce3"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="Çilek Sos\n+2.00 TL"
            android:textSize="12sp"
            android:background="#EFEBE9"
            android:textColor="@android:color/black"
            android:layout_marginStart="4dp"/>

    </LinearLayout>

    <!-- Süsleme Seçimi -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Süslemeler"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_marginBottom="12dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp">

        <Button
            android:id="@+id/btn_topping1"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="Fındık\n+1.50 TL"
            android:textSize="12sp"
            android:background="#F3E5F5"
            android:textColor="@android:color/black"
            android:layout_marginEnd="4dp"/>

        <Button
            android:id="@+id/btn_topping2"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="Renkli Şeker\n+1.00 TL"
            android:textSize="12sp"
            android:background="#F3E5F5"
            android:textColor="@android:color/black"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"/>

        <Button
            android:id="@+id/btn_topping3"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="Krem Şanti\n+1.50 TL"
            android:textSize="12sp"
            android:background="#F3E5F5"
            android:textColor="@android:color/black"
            android:layout_marginStart="4dp"/>

    </LinearLayout>

    <!-- Toplam ve Ödeme -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp"
        android:background="#E8F5E9"
        android:padding="12dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Toplam:"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"/>

        <TextView
            android:id="@+id/tv_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8.00 TL"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_payment_cash"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="Nakit Ödeme"
            android:textSize="16sp"
            android:background="#4CAF50"
            android:textColor="@android:color/white"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/btn_payment_card"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="Kart Ödeme"
            android:textSize="16sp"
            android:background="#2196F3"
            android:textColor="@android:color/white"
            android:layout_marginStart="8dp"/>

    </LinearLayout>

    <Button
        android:id="@+id/btn_back_to_main"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Geri"
        android:textSize="14sp"
        android:background="#FF5722"
        android:textColor="@android:color/white"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"/>

</LinearLayout>