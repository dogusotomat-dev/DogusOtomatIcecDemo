<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/dogus_background_light"
    android:padding="16dp">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="24dp">

        <Button
            android:id="@+id/btn_back_to_menu"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:text="←"
            android:textSize="20sp"
            android:background="@drawable/dogus_button_back"
            android:textColor="@android:color/white"
            android:layout_marginEnd="16dp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Dondurma Satış Ekranı"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/dogus_text_dark"
            android:gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="₺"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/dogus_primary"/>
    </LinearLayout>

    <!-- Dondurma Çeşitleri -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dondurma Çeşitleri"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/dogus_text_dark"
        android:layout_marginBottom="16dp"/>

    <!-- Vanilya Dondurma -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/dogus_card_background"
        android:padding="16dp"
        android:layout_marginBottom="12dp"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@android:drawable/ic_menu_gallery"
            android:tint="@color/dogus_vanilla"
            android:layout_marginEnd="16dp"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vanilya Dondurma"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/dogus_text_dark"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="₺12.00"
                android:textSize="18sp"
                android:textColor="@color/dogus_primary"
                android:textStyle="bold"/>
        </LinearLayout>

        <Button
            android:id="@+id/btn_buy_vanilla"
            android:layout_width="100dp"
            android:layout_height="45dp"
            android:text="SATIN AL"
            android:textSize="14sp"
            android:background="@drawable/dogus_button_success"
            android:textColor="@android:color/white"/>
    </LinearLayout>

    <!-- Çikolata Dondurma -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/dogus_card_background"
        android:padding="16dp"
        android:layout_marginBottom="12dp"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@android:drawable/ic_menu_gallery"
            android:tint="@color/dogus_chocolate"
            android:layout_marginEnd="16dp"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Çikolata Dondurma"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/dogus_text_dark"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="₺15.00"
                android:textSize="18sp"
                android:textColor="@color/dogus_primary"
                android:textStyle="bold"/>
        </LinearLayout>

        <Button
            android:id="@+id/btn_buy_chocolate"
            android:layout_width="100dp"
            android:layout_height="45dp"
            android:text="SATIN AL"
            android:textSize="14sp"
            android:background="@drawable/dogus_button_success"
            android:textColor="@android:color/white"/>
    </LinearLayout>

    <!-- Çilek Dondurma -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/dogus_card_background"
        android:padding="16dp"
        android:layout_marginBottom="20dp"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@android:drawable/ic_menu_gallery"
            android:tint="@color/dogus_strawberry"
            android:layout_marginEnd="16dp"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Çilek Dondurma"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/dogus_text_dark"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="₺18.00"
                android:textSize="18sp"
                android:textColor="@color/dogus_primary"
                android:textStyle="bold"/>
        </LinearLayout>

        <Button
            android:id="@+id/btn_buy_strawberry"
            android:layout_width="100dp"
            android:layout_height="45dp"
            android:text="SATIN AL"
            android:textSize="14sp"
            android:background="@drawable/dogus_button_success"
            android:textColor="@android:color/white"/>
    </LinearLayout>

    <!-- Özel Dondurma -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Özel Dondurma Yap"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/dogus_text_dark"
        android:layout_marginBottom="16dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="24dp"
        android:gravity="center_vertical">

        <EditText
            android:id="@+id/et_custom_flavor"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:hint="Özel lezzet girin"
            android:inputType="text"
            android:background="@drawable/dogus_input_field"
            android:padding="12dp"
            android:textSize="16sp"
            android:layout_marginEnd="12dp"/>

        <Button
            android:id="@+id/btn_custom_ice_cream"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:text="ÖZEL YAP"
            android:textSize="14sp"
            android:background="@drawable/dogus_button_custom"
            android:textColor="@android:color/white"/>
    </LinearLayout>

    <!-- Sepet -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/dogus_card_background"
        android:padding="20dp"
        android:layout_marginBottom="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sepet"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/dogus_text_dark"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:id="@+id/tv_cart_items"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sepetiniz boş"
            android:textSize="16sp"
            android:textColor="@color/dogus_text_secondary"
            android:gravity="center"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:id="@+id/tv_total_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Toplam: 0,00 TL (0 adet)"
            android:textSize="18sp"
            android:textColor="@color/dogus_primary"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="20dp"/>

        <Button
            android:id="@+id/btn_checkout"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="ÖDEME YAP"
            android:textSize="18sp"
            android:textStyle="bold"
            android:background="@drawable/dogus_button_sales"
            android:textColor="@android:color/white"/>
    </LinearLayout>

</LinearLayout>
