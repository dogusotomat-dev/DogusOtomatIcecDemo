<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dogus_background_light">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="⚙️ Makine Ayarları"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/dogus_primary"
            android:gravity="center"
            android:layout_marginBottom="24dp"/>

        <!-- Makine Durumu -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/dogus_background_card">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Makine Durumu"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/dogus_primary"
                    android:layout_marginBottom="16dp"/>

                <TextView
                    android:id="@+id/tvCurrentMode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mevcut Mod: Normal"
                    android:textSize="16sp"
                    android:textColor="@color/dogus_text_dark"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/tvMachineStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Makine Durumu: Aktif"
                    android:textSize="16sp"
                    android:textColor="@color/dogus_text_dark"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Makine Kontrolü -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/dogus_background_card">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Makine Kontrolü"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/dogus_primary"
                    android:layout_marginBottom="16dp"/>

                <Button
                    android:id="@+id/btnChangeMode"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="🔄 Mod Değiştir"
                    android:textSize="16sp"
                    android:background="@drawable/dogus_button_primary"
                    android:textColor="@color/dogus_text_white"
                    android:layout_marginBottom="12dp"/>

                <Button
                    android:id="@+id/btnEmergencyStop"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="🛑 Acil Durdur"
                    android:textSize="16sp"
                    android:background="@drawable/dogus_button_danger"
                    android:textColor="@color/dogus_text_white"
                    android:layout_marginBottom="12dp"/>

                <Button
                    android:id="@+id/btnResetMachine"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="🔄 Makineyi Sıfırla"
                    android:textSize="16sp"
                    android:background="@drawable/dogus_button_warning"
                    android:textColor="@color/dogus_text_white"
                    android:layout_marginBottom="12dp"/>

                <Button
                    android:id="@+id/btnTestDischarge"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="🧪 Test Çıkışı"
                    android:textSize="16sp"
                    android:background="@drawable/dogus_button_info"
                    android:textColor="@color/dogus_text_white"
                    android:layout_marginBottom="12dp"/>

                <Button
                    android:id="@+id/btnSelfInspection"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="🔍 Öz Kontrol"
                    android:textSize="16sp"
                    android:background="@drawable/dogus_button_success"
                    android:textColor="@color/dogus_text_white"
                    android:layout_marginBottom="12dp"/>

                <Button
                    android:id="@+id/btnClearFaults"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="🧹 Hataları Temizle"
                    android:textSize="16sp"
                    android:background="@drawable/dogus_button_info"
                    android:textColor="@color/dogus_text_white"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Makine Bilgileri -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/dogus_background_card">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Makine Bilgileri"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/dogus_primary"
                    android:layout_marginBottom="16dp"/>

                <EditText
                    android:id="@+id/etSerialNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Seri Numarası"
                    android:inputType="text"
                    android:background="@drawable/dogus_input_field"
                    android:padding="12dp"
                    android:layout_marginBottom="12dp"/>

                <EditText
                    android:id="@+id/etIoTNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="IoT Numarası"
                    android:inputType="text"
                    android:background="@drawable/dogus_input_field"
                    android:padding="12dp"
                    android:layout_marginBottom="12dp"/>

                <EditText
                    android:id="@+id/etTelemetryIP"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Telemetri IP Adresi"
                    android:inputType="text"
                    android:background="@drawable/dogus_input_field"
                    android:padding="12dp"
                    android:layout_marginBottom="12dp"/>

                <EditText
                    android:id="@+id/etTelemetryPort"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Telemetri Port"
                    android:inputType="number"
                    android:background="@drawable/dogus_input_field"
                    android:padding="12dp"
                    android:layout_marginBottom="16dp"/>

                <Button
                    android:id="@+id/btnSaveSettings"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="💾 Ayarları Kaydet"
                    android:textSize="16sp"
                    android:background="@drawable/dogus_button_success"
                    android:textColor="@color/dogus_text_white"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Geri Dön -->
        <Button
            android:id="@+id/btnBack"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="← Geri Dön"
            android:textSize="16sp"
            android:background="@drawable/dogus_button_back"
            android:textColor="@color/dogus_text_white"/>

    </LinearLayout>
</ScrollView>
