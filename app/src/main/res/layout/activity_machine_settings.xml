<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/white">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Makine Ayarları"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:gravity="center"
        android:layout_marginBottom="20dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Makine Bağlantı Ayarları -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bağlantı Ayarları"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_marginBottom="12dp"
                android:background="#E0E0E0"
                android:padding="8dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Seri Port Yolu (örn: /dev/ttyS1)"
                android:textSize="14sp"
                android:background="#f0f0f0"
                android:padding="12dp"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Baud Rate (örn: 9600)"
                android:textSize="14sp"
                android:inputType="number"
                android:background="#f0f0f0"
                android:padding="12dp"
                android:layout_marginBottom="16dp"/>

            <!-- Sıcaklık Ayarları -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sıcaklık Ayarları"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_marginBottom="12dp"
                android:background="#E0E0E0"
                android:padding="8dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Üst Tank Sıcaklığı (°C)"
                android:textSize="14sp"
                android:inputType="numberSigned"
                android:background="#f0f0f0"
                android:padding="12dp"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Alt Tank Sıcaklığı (°C)"
                android:textSize="14sp"
                android:inputType="numberSigned"
                android:background="#f0f0f0"
                android:padding="12dp"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Buzdolabı Sıcaklığı (°C)"
                android:textSize="14sp"
                android:inputType="numberSigned"
                android:background="#f0f0f0"
                android:padding="12dp"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Dondurucu Sıcaklığı (°C)"
                android:textSize="14sp"
                android:inputType="numberSigned"
                android:background="#f0f0f0"
                android:padding="12dp"
                android:layout_marginBottom="16dp"/>

            <!-- Çalışma Modu Ayarları -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Çalışma Modu Ayarları"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_marginBottom="12dp"
                android:background="#E0E0E0"
                android:padding="8dp"/>

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Otomatik Temizleme Etkin"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:layout_marginBottom="8dp"/>

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sıcaklık İzleme Etkin"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:layout_marginBottom="8dp"/>

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hata Bildirimi Etkin"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:layout_marginBottom="16dp"/>

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_back"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="Geri"
            android:textSize="16sp"
            android:background="#FF5722"
            android:textColor="@android:color/white"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/btn_save"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="Kaydet"
            android:textSize="16sp"
            android:background="#4CAF50"
            android:textColor="@android:color/white"
            android:layout_marginStart="8dp"/>

    </LinearLayout>

</LinearLayout>