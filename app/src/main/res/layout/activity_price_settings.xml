<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/dogus_background_light"
    android:padding="16dp">

    <!-- Header -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="💰 Fiyat Ayarları"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/dogus_primary"
        android:gravity="center"
        android:layout_marginBottom="32dp"/>

    <!-- Fiyat Ayarları -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="@color/dogus_background_card">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fiyat Belirle"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/dogus_primary"
                android:layout_marginBottom="20dp"/>

            <EditText
                android:id="@+id/etBasePrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Temel Dondurma Fiyatı (TL)"
                android:inputType="numberDecimal"
                android:background="@drawable/dogus_input_field"
                android:padding="16dp"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="📋 Esnek Seçim Sistemi"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/dogus_secondary"
                android:layout_marginBottom="8dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <Switch
                    android:id="@+id/swFlexibleSelection"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="Esnek Seçim Aktif"
                    android:textSize="14sp"
                    android:textColor="@color/dogus_text_primary"/>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="✅ Birden fazla sos seçebilirsiniz\n✅ Birden fazla süsleme seçebilirsiniz\n✅ Her seçim ayrı olarak ücretlendirilir\n💡 Satış verilerinde tüm seçimler görünür"
                android:textSize="12sp"
                android:textColor="@color/dogus_text_secondary"
                android:background="@drawable/dogus_info_card"
                android:padding="12dp"
                android:layout_marginBottom="24dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="🍫 Sos Fiyatları"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/dogus_primary"
                android:layout_marginBottom="12dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="🍫 Sos 1"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/dogus_secondary"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:id="@+id/etSauce1Price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Sos 1 Fiyatı (TL)"
                android:inputType="numberDecimal"
                android:background="@drawable/dogus_input_field"
                android:padding="12dp"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="🍯 Sos 2"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/dogus_secondary"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:id="@+id/etSauce2Price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Sos 2 Fiyatı (TL)"
                android:inputType="numberDecimal"
                android:background="@drawable/dogus_input_field"
                android:padding="12dp"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="🍓 Sos 3"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/dogus_secondary"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:id="@+id/etSauce3Price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Sos 3 Fiyatı (TL)"
                android:inputType="numberDecimal"
                android:background="@drawable/dogus_input_field"
                android:padding="12dp"
                android:layout_marginBottom="20dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="✨ Süsleme Fiyatları"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/dogus_primary"
                android:layout_marginBottom="12dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="🥜 Süsleme 1"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/dogus_secondary"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:id="@+id/etTopping1Price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Süsleme 1 Fiyatı (TL)"
                android:inputType="numberDecimal"
                android:background="@drawable/dogus_input_field"
                android:padding="12dp"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="🌈 Süsleme 2"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/dogus_secondary"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:id="@+id/etTopping2Price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Süsleme 2 Fiyatı (TL)"
                android:inputType="numberDecimal"
                android:background="@drawable/dogus_input_field"
                android:padding="12dp"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="🍰 Süsleme 3"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/dogus_secondary"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:id="@+id/etTopping3Price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Süsleme 3 Fiyatı (TL)"
                android:inputType="numberDecimal"
                android:background="@drawable/dogus_input_field"
                android:padding="12dp"
                android:layout_marginBottom="24dp"/>

            <Button
                android:id="@+id/btnSavePrices"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="💾 Fiyatları Kaydet"
                android:textSize="16sp"
                android:background="@drawable/dogus_button_success"
                android:textColor="@color/dogus_text_white"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Geri Dön -->
    <Button
        android:id="@+id/btnBack"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="← Geri Dön"
        android:textSize="16sp"
        android:background="@drawable/dogus_button_back"
        android:textColor="@color/dogus_text_white"/>

</LinearLayout>
