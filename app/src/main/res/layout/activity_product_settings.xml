<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/white">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ürün Ayarları"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:gravity="center"
        android:layout_marginBottom="20dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Dondurma Türleri -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dondurma Türleri"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_marginBottom="12dp"
                android:background="#E0E0E0"
                android:padding="8dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Vanilya Dondurma Adı"
                android:textSize="14sp"
                android:background="#f0f0f0"
                android:padding="12dp"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Çikolata Dondurma Adı"
                android:textSize="14sp"
                android:background="#f0f0f0"
                android:padding="12dp"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Çilek Dondurma Adı"
                android:textSize="14sp"
                android:background="#f0f0f0"
                android:padding="12dp"
                android:layout_marginBottom="16dp"/>

            <!-- Sos Ayarları -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sos Ayarları"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_marginBottom="12dp"
                android:background="#E0E0E0"
                android:padding="8dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Çikolata Sos Adı"
                android:textSize="14sp"
                android:background="#f0f0f0"
                android:padding="12dp"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Karamel Sos Adı"
                android:textSize="14sp"
                android:background="#f0f0f0"
                android:padding="12dp"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Çilek Sos Adı"
                android:textSize="14sp"
                android:background="#f0f0f0"
                android:padding="12dp"
                android:layout_marginBottom="16dp"/>

            <!-- Süsleme Ayarları -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Süsleme Ayarları"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_marginBottom="12dp"
                android:background="#E0E0E0"
                android:padding="8dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Fındık Süsleme Adı"
                android:textSize="14sp"
                android:background="#f0f0f0"
                android:padding="12dp"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Renkli Şeker Süsleme Adı"
                android:textSize="14sp"
                android:background="#f0f0f0"
                android:padding="12dp"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Krem Şanti Süsleme Adı"
                android:textSize="14sp"
                android:background="#f0f0f0"
                android:padding="12dp"
                android:layout_marginBottom="16dp"/>

            <!-- Stok Ayarları -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Stok Ayarları"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_marginBottom="12dp"
                android:background="#E0E0E0"
                android:padding="8dp"/>

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Stok Takibi Etkin"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:layout_marginBottom="8dp"/>

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Düşük Stok Uyarısı Etkin"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Düşük Stok Eşiği"
                android:textSize="14sp"
                android:inputType="number"
                android:background="#f0f0f0"
                android:padding="12dp"
                android:layout_marginBottom="16dp"/>

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_back"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="Geri"
            android:textSize="16sp"
            android:background="#FF5722"
            android:textColor="@android:color/white"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/btn_save"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="Kaydet"
            android:textSize="16sp"
            android:background="#4CAF50"
            android:textColor="@android:color/white"
            android:layout_marginStart="8dp"/>

    </LinearLayout>

</LinearLayout>