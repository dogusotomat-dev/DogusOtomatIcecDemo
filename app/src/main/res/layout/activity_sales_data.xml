<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/dogus_background_light"
    android:padding="16dp">

    <!-- Header -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="📊 Satış Verileri"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/dogus_primary"
        android:gravity="center"
        android:layout_marginBottom="32dp"/>

    <!-- Satış Verileri -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="24dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="@color/dogus_background_card">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:id="@+id/tvSalesData"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Satış verileri yükleniyor..."
                    android:textSize="16sp"
                    android:textColor="@color/dogus_text_dark"
                    android:lineSpacingExtra="8dp"/>

            </LinearLayout>
        </ScrollView>
    </androidx.cardview.widget.CardView>

    <!-- Geri Dön -->
    <Button
        android:id="@+id/btnBack"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="← Geri Dön"
        android:textSize="16sp"
        android:background="@drawable/dogus_button_back"
        android:textColor="@color/dogus_text_white"/>

</LinearLayout>
