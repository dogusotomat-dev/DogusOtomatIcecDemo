<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scroll_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dogus_background_light"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Modern Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="32dp"
            android:background="@drawable/dogus_header_background"
            android:padding="32dp"
            android:elevation="8dp">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@android:drawable/ic_menu_info_details"
                android:tint="@color/dogus_text_white"
                android:layout_marginBottom="16dp"
                android:background="@drawable/dogus_icon_background"
                android:padding="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="📝 DOGİ Gelişmiş Log Sistemi"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="@color/dogus_text_white"
                android:layout_marginBottom="8dp"
                android:fontFamily="sans-serif-light"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DOGİ log dosyalarını yönetin ve izleyin"
                android:textSize="16sp"
                android:textColor="@color/dogus_text_white"
                android:alpha="0.9"
                android:gravity="center"/>
        </LinearLayout>

        <!-- Log System Status -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/dogus_card_background">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="📊 Log Sistemi Durumu"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/dogus_primary"
                    android:layout_marginBottom="16dp"/>

                <TextView
                    android:id="@+id/tv_log_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="DOGİ Log Sistemi Aktif"
                    android:textSize="16sp"
                    android:textColor="@color/dogus_text_dark"
                    android:background="@drawable/dogus_input_field_modern"
                    android:padding="16dp"
                    android:gravity="center"
                    android:layout_marginBottom="16dp"/>

                <TextView
                    android:id="@+id/tv_log_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="DOGİ log sistemi başarıyla başlatıldı.\nGerçek dosya sistemi entegrasyonu aktif.\nLog dosyaları DOGİ_Logs klasöründe saklanıyor."
                    android:textSize="14sp"
                    android:textColor="@color/dogus_text_secondary"
                    android:background="@drawable/dogus_cart_empty_background"
                    android:padding="12dp"
                    android:gravity="center"
                    android:minHeight="100dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Log Management -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/dogus_card_background">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="🗂️ Log Yönetimi"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/dogus_primary"
                    android:layout_marginBottom="20dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <Button
                        android:id="@+id/btn_get_log_info"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_weight="1"
                        android:text="📋 Log Bilgisi"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:background="@drawable/dogus_button_success_modern"
                        android:textColor="@android:color/white"
                        android:layout_marginEnd="6dp"
                        android:elevation="4dp"/>

                    <Button
                        android:id="@+id/btn_test_logging"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_weight="1"
                        android:text="🧪 Test Log"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:background="@drawable/dogus_button_secondary_modern"
                        android:textColor="@android:color/white"
                        android:layout_marginStart="6dp"
                        android:elevation="4dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <Button
                        android:id="@+id/btn_clear_current_log"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_weight="1"
                        android:text="🧹 Mevcut Log"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:background="@drawable/dogus_button_decor_modern"
                        android:textColor="@android:color/white"
                        android:layout_marginEnd="6dp"
                        android:elevation="4dp"/>

                    <Button
                        android:id="@+id/btn_clear_all_logs"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_weight="1"
                        android:text="🗑️ Tüm Loglar"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:background="@drawable/dogus_button_sales_modern"
                        android:textColor="@android:color/white"
                        android:layout_marginStart="6dp"
                        android:elevation="4dp"/>
                </LinearLayout>

                <Button
                    android:id="@+id/btn_generate_report"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="📊 Log Raporu Oluştur"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:background="@drawable/dogus_button_admin_modern"
                    android:textColor="@android:color/white"
                    android:elevation="4dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Back Button -->
        <Button
            android:id="@+id/btn_back"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="⬅️ Geri Dön"
            android:textSize="16sp"
            android:textStyle="bold"
            android:background="@drawable/dogus_button_back_modern"
            android:textColor="@android:color/white"
            android:elevation="4dp"/>

        <!-- Footer -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="32dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🔒 Güvenli Log Yönetimi"
                android:textSize="14sp"
                android:textColor="@color/dogus_text_secondary"
                android:layout_marginEnd="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="📱 Gerçek Zamanlı İzleme"
                android:textSize="14sp"
                android:textColor="@color/dogus_text_secondary"
                android:layout_marginEnd="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="⚡ Hızlı Erişim"
                android:textSize="14sp"
                android:textColor="@color/dogus_text_secondary"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
