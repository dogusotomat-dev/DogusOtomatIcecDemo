<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/dogus_background_light"
    android:padding="16dp">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="20dp">

        <Button
            android:id="@+id/btnBack"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:text="←"
            android:textSize="24sp"
            android:background="@drawable/dogus_button_secondary"
            android:textColor="@color/dogus_text_white"
            android:layout_marginEnd="16dp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="🎬 Gelişmiş Reklam Ayarları"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/dogus_text_dark"
            android:gravity="center"/>

    </LinearLayout>

    <!-- ScrollView for Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Control Buttons Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/dogus_card_background_modern"
                android:padding="16dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="🎮 Kontrol Butonları"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/dogus_text_dark"
                    android:layout_marginBottom="16dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <Button
                        android:id="@+id/btnAddPhoto"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="📷 Fotoğraf Ekle"
                        android:textSize="14sp"
                        android:background="@drawable/dogus_button_info_modern"
                        android:textColor="@color/dogus_text_white"
                        android:layout_marginEnd="8dp"
                        android:padding="12dp"/>

                    <Button
                        android:id="@+id/btnAddVideo"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="🎥 Video Ekle"
                        android:textSize="14sp"
                        android:background="@drawable/dogus_button_info_modern"
                        android:textColor="@color/dogus_text_white"
                        android:layout_marginStart="8dp"
                        android:padding="12dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnStartAds"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="▶️ Başlat"
                        android:textSize="16sp"
                        android:background="@drawable/dogus_button_success_modern"
                        android:textColor="@color/dogus_text_white"
                        android:layout_marginEnd="8dp"
                        android:padding="12dp"/>

                    <Button
                        android:id="@+id/btnStopAds"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="⏹️ Durdur"
                        android:textSize="16sp"
                        android:background="@drawable/dogus_button_danger_modern"
                        android:textColor="@color/dogus_text_white"
                        android:layout_marginStart="8dp"
                        android:padding="12dp"/>

                </LinearLayout>

            </LinearLayout>

            <!-- Settings Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/dogus_card_background_modern"
                android:padding="16dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="⚙️ Reklam Ayarları"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/dogus_text_dark"
                    android:layout_marginBottom="16dp"/>

                <!-- Auto Play Switch -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Otomatik Reklam Oynatma"
                        android:textSize="16sp"
                        android:textColor="@color/dogus_text_dark"/>

                    <Switch
                        android:id="@+id/switchAutoPlay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"/>

                </LinearLayout>

                <!-- Photo Ads Switch -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Fotoğraf Reklamları"
                        android:textSize="16sp"
                        android:textColor="@color/dogus_text_dark"/>

                    <Switch
                        android:id="@+id/switchPhotoAds"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"/>

                </LinearLayout>

                <!-- Video Ads Switch -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Video Reklamları"
                        android:textSize="16sp"
                        android:textColor="@color/dogus_text_dark"/>

                    <Switch
                        android:id="@+id/switchVideoAds"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"/>

                </LinearLayout>

            </LinearLayout>

            <!-- Duration Settings Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/dogus_card_background_modern"
                android:padding="16dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="⏱️ Süre Ayarları"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/dogus_text_dark"
                    android:layout_marginBottom="16dp"/>

                <!-- Photo Duration -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Fotoğraf Gösterim Süresi:"
                        android:textSize="14sp"
                        android:textColor="@color/dogus_text_secondary"
                        android:layout_marginBottom="8dp"/>

                    <SeekBar
                        android:id="@+id/seekBarPhotoDuration"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:max="59"
                        android:progress="4"
                        android:progressTint="@color/dogus_primary"
                        android:thumbTint="@color/dogus_primary"/>

                    <TextView
                        android:id="@+id/tvPhotoDuration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5 saniye"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/dogus_primary"
                        android:layout_gravity="center"
                        android:layout_marginTop="8dp"/>

                </LinearLayout>

                <!-- Video Duration -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Video Gösterim Süresi:"
                        android:textSize="14sp"
                        android:textColor="@color/dogus_text_secondary"
                        android:layout_marginBottom="8dp"/>

                    <SeekBar
                        android:id="@+id/seekBarVideoDuration"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:max="115"
                        android:progress="10"
                        android:progressTint="@color/dogus_primary"
                        android:thumbTint="@color/dogus_primary"/>

                    <TextView
                        android:id="@+id/tvVideoDuration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="15 saniye"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/dogus_primary"
                        android:layout_gravity="center"
                        android:layout_marginTop="8dp"/>

                </LinearLayout>

                <!-- Transition Duration -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Geçiş Efekti Süresi:"
                        android:textSize="14sp"
                        android:textColor="@color/dogus_text_secondary"
                        android:layout_marginBottom="8dp"/>

                    <SeekBar
                        android:id="@+id/seekBarTransitionDuration"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:max="49"
                        android:progress="9"
                        android:progressTint="@color/dogus_primary"
                        android:thumbTint="@color/dogus_primary"/>

                    <TextView
                        android:id="@+id/tvTransitionDuration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1.0 saniye"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/dogus_primary"
                        android:layout_gravity="center"
                        android:layout_marginTop="8dp"/>

                </LinearLayout>

                <!-- Cycle Delay -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Döngü Arası Bekleme:"
                        android:textSize="14sp"
                        android:textColor="@color/dogus_text_secondary"
                        android:layout_marginBottom="8dp"/>

                    <SeekBar
                        android:id="@+id/seekBarCycleDelay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:max="30"
                        android:progress="3"
                        android:progressTint="@color/dogus_primary"
                        android:thumbTint="@color/dogus_primary"/>

                    <TextView
                        android:id="@+id/tvCycleDelay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3 saniye"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/dogus_primary"
                        android:layout_gravity="center"
                        android:layout_marginTop="8dp"/>

                </LinearLayout>

            </LinearLayout>

            <!-- Quality Settings Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/dogus_card_background_modern"
                android:padding="16dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="🎨 Kalite Ayarları"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/dogus_text_dark"
                    android:layout_marginBottom="16dp"/>

                <!-- Photo Quality -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Fotoğraf Kalitesi:"
                        android:textSize="16sp"
                        android:textColor="@color/dogus_text_dark"/>

                    <Spinner
                        android:id="@+id/spinnerPhotoQuality"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="120dp"
                        android:background="@drawable/dogus_edit_text_background"
                        android:padding="8dp"/>

                </LinearLayout>

                <!-- Video Quality -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Video Kalitesi:"
                        android:textSize="16sp"
                        android:textColor="@color/dogus_text_dark"/>

                    <Spinner
                        android:id="@+id/spinnerVideoQuality"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="120dp"
                        android:background="@drawable/dogus_edit_text_background"
                        android:padding="8dp"/>

                </LinearLayout>

            </LinearLayout>

            <!-- Advertisement List Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/dogus_card_background_modern"
                android:padding="16dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="📋 Reklam Listesi"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/dogus_text_dark"
                    android:layout_marginBottom="16dp"/>

                <ListView
                    android:id="@+id/listViewAdvertisements"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:background="@drawable/dogus_edit_text_background"
                    android:divider="@color/dogus_border"
                    android:dividerHeight="1dp"/>

            </LinearLayout>

            <!-- Preview Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/dogus_card_background_modern"
                android:padding="16dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="👁️ Önizleme"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/dogus_text_dark"
                    android:layout_marginBottom="16dp"/>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:background="@drawable/dogus_edit_text_background">

                    <ImageView
                        android:id="@+id/ivPreview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:visibility="gone"/>

                    <VideoView
                        android:id="@+id/vvPreview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="gone"/>

                </FrameLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <!-- Save Settings Button -->
    <Button
        android:id="@+id/btnSaveSettings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="💾 Tüm Ayarları Kaydet"
        android:textSize="18sp"
        android:textStyle="bold"
        android:background="@drawable/dogus_button_primary_modern"
        android:textColor="@color/dogus_text_white"
        android:layout_marginTop="16dp"
        android:padding="16dp"/>

</LinearLayout>
